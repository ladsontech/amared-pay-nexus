  "shortcuts": [
    {
      "name": "Bulk Payments",
      "short_name": "Bulk Pay",
      "description": "Create and manage bulk payments",
      "url": "/org/bulk-payments",
      "icons": [
        {
          "src": "/images/Almaredpay_logo.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Collections",
      "short_name": "Collect",
      "description": "Manage payment collections",
      "url": "/org/collections",
      "icons": [
        {
          "src": "/images/Almaredpay_logo.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Petty Cash",
      "short_name": "Petty",
